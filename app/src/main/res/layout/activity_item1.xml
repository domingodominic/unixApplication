<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".item1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shirt1" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"

        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/star"
        android:text="   5.0"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="104dp"

        android:fontFamily="@font/poppins_medium"
        android:text="5k Sold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="380dp"
        app:circularflow_radiusInDP="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Product name:"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Gucci"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViews"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Price:"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView023"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/poppins_medium"
            android:text="$30"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViews2324"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Size:"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView0324"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Medium"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViews232324"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Statement shirt:"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView0324232"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/poppins_medium"
            android:text="PTBC"
            android:textColor="@color/white"
            android:textSize="12dp" />


        <Button
            android:id="@+id/addtocart"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="290dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Add to cart"
            android:textColor="@color/statusbar"
            app:cornerRadius="100dp" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>