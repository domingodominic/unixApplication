<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:paddingLeft="10dp"
                android:id="@+id/shirtImage"
                android:layout_marginTop="4dp"
                android:src="@drawable/slider1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="hello"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="10sp"
                android:layout_marginRight="12dp"
                android:layout_below="@+id/shirtName"
                android:layout_marginLeft="12dp"
                android:id="@+id/description"
                android:layout_toRightOf="@+id/shirtImage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:id="@+id/shirtName"
                android:textColor="@color/statusbar"
                android:textStyle="bold"
                android:textSize="26sp"
                android:fontFamily="@font/poppins_medium"

                android:layout_toRightOf="@+id/shirtImage"
                tools:text="Shirt"/>

            <ImageView
                android:layout_width="114dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="65dp"
                android:src="@drawable/stars" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/statusbar"
                android:layout_toRightOf="@+id/shirtImage"
                android:id="@+id/clickheretoorder"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                tools:text="Click  to Order"/>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>
