<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderSummary"
        android:textColor="@color/statusbar"
        android:text="Shirt Name"
        android:textStyle="bold"
        android:id="@+id/shirtNameinOrderSummary"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderSummary"
        android:layout_toRightOf="@+id/shirtNameinOrderSummary"
        android:text="x"
        android:textStyle="bold"
        android:textColor="@color/statusbar"
        android:id="@+id/quantityinOrderSummary"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/large"
        android:textStyle="italic"

        android:layout_marginLeft="20dp"
        android:layout_below="@id/shirtNameinOrderSummary"
        android:text="large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/large"
        android:id="@+id/small"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/shirtNameinOrderSummary"
        android:text="small"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="$10"
        android:textColor="@color/statusbar"
        android:id="@+id/priceinOrderSummary"
        android:layout_marginRight="10dp"/>



</RelativeLayout>
